<script src="{{{config.wwwroot}}}/local/recommendation/amd/src/jquery.js"></script>
<script>
$('.nav-link').removeClass('active');
$('.custom').addClass('active');

function getcourses(domainid) {
    if(domainid){

$.ajax({
    method: 'POST',
    url: 'getdomain.php',
    dataType: 'json',
    async: false,
    data: {
        domainid : domainid
    },
    success: function(json){
        $("#course").html(json.courseoptions);
    }


})
    }
}

function reload() {
    window.location.href = 'savedvideos.php';
}

